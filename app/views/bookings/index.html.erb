<div class='container'>
  <h1>Your Bookings</h1>

  <ul>
    <% @bookings.each do |booking| %>
      <% if booking.event.start_time > Time.current %>
        <li><%= booking.event.event_name %>  <%= booking.event.start_time.strftime('%d/%m/%Y %H:%M') %></li>
      <% else %>
        <li><%= booking.event.event_name %>  <%= booking.event.start_time.strftime('%d/%m/%Y %H:%M') %>
        <%= link_to 'Write a review', new_booking_review_path(booking) %> </p></li>
      <% end %>
    <% end %>
  </ul>
</div>
