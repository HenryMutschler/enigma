<h1>Booking#new</h1>
<p>Find me in app/views/booking/new.html.erb</p>

<div class="form-inputs">
  <%= simple_form_for [ @booking ] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.input :start_time, as: :date, html5: true, label: 'Date' %>
    <%= f.label :guests %>
    <%= f.number_field :guest_amount %>
    <%= f.submit "Create booking", class: "btn btn-primary" %>
  <% end %>
</div>
