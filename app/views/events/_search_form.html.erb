<div class="col-sm-12 col-bg-6">
  <%= form_tag events_path, method: :get do %>
    <div class="search-bars">
      <div>
        <%= text_field_tag :query_event,
          params[:query_event],
          class: "form-control",
          placeholder: "Cuisine or Name"%>
    </div>
    <div>
      <%= text_field_tag :query_geo,
        params[:query_geo],
        class: "form-control",
        placeholder: "Postcode or Location"%>
    </div>
  </div>
  <div class="submit-button">
    <%= submit_tag "SURPRISE ME", class: "btn btn-primary", id: "home-button"%>
  </div>
  <% end %>
</div>
