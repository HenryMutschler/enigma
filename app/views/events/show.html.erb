<% content_for :meta_title, "#{@event.event_name} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @event.event_descritpion %>
<% content_for :meta_image, asset_path(@event.image_url) %>


<div class="container">
  <div class="event-context">


    <div class="btn-back"><%= link_to events_path do %>
      <i class="far fa-chevron-left fa-2x"></i>
    <% end %></div>
    <h4><%= @event.event_name.truncate(35, separator: ' ') %></h4>
    <p><%= @event.event_descritpion.truncate(120, separator: ' ') %></p>
    <p>Â£ <%= @event.price %></p>

    <p>This is an event organized by <%= @event.user.first_name%><br>
      <% if @event.user.reviews.size == 1 %>  
        <p> See their <%= link_to "#{@event.user.reviews.size} review here", review_path(@event.user)%><br> 
      <% else %>
        <p> See their <%= link_to "#{@event.user.reviews.size} reviews here", review_path(@event.user)%><br>
    <div>
      <%= link_to 'BOOK NOW', new_event_booking_path(@event), class:'btn btn-primary'%>
    </div>
  </div>
