<% content_for :meta_title, "#{@event.event_name} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @event.event_descritpion %>
<% content_for :meta_image, asset_path(@event.image_url) %>


<div class="container">
  <br>
  <div class="event-context">
    <h4><%= @event.event_name %></h4>
    <div class='star-btn' id="favourite_<%= @event.id %>">
      <%= render "favourites/favourite", event: @event %>
    </div>
    <p><%= @event.event_descritpion %></p>
    <p>Â£ <%= @event.price %></p>

    <p>This is an event organized by <%= link_to "#{@event.user.first_name}", review_path(@event.user)%>
        <%#= image_tag "#{@event.user.picture_url}" %>
      <%= pluralize @event.user.reviews.size, "reviews"%></p>

    <%= link_to 'Book Now', new_event_booking_path(@event), class:'btn btn-warning'%>
  </div>
  <br>
  <div id="map"
    style="width: 100%; height: 450px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div id="reviews">
    <% if @event.user.reviews.blank? %>
      Be the first to leave a review for <%= @event.user.first_name %>
    <% else %>
      <% @event.user.reviews.each do |review| %>
        <p><%= review.content %> by <%= review.booking.user.first_name %></p>
      <% end %>
    <% end %>
  </div>
</div>
