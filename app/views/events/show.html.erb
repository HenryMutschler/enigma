<div class="container">
  <br>
  <div class="event-context">
    <h4><%= @event.event_name %></h4><br>
    <div class='star-btn' id="favourite_<%= @event.id %>">
      <%= render "favourites/favourite", event: @event %>
    </div>
    <p><%= @event.event_descritpion %></p>
    <p>Â£ <%= @event.price %></p>
    <p><%= pluralize @event.reviews.size, "reviews" %></p>
    <%= link_to 'Book Now', new_event_booking_path(@event), class:'btn btn-warning'%><br>
  </div>
  <br>
  <div id="map"
    style="width: 100%; height: 450px;"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div id="reviews">
    <% if @event.user.reviews.blank? %>
      Be the first to leave a review for <%= @event.user.first_name %>
    <% else %>
      <% @event.reviews.each do |review| %>
        <p><%= review.cotent %></p>
      <% end %>
    <% end %>
  </div>
</div>
