<div class="container">
  <h3>Reviews for <%= @user.first_name %></h3>

  <ul class="list">
    <% @reviews.each do |review| %>
      <li class="list-item-review">
        <div class="list-content">
          <%= image_tag review.booking.user.picture_url, class: "avatar" %>
          <%= review.booking.user.first_name %>
          <%= review.created_at.strftime('%d %b %Y') %>
        </div>
        <p><%= review.content %></p>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Back', :back %>
</div>
